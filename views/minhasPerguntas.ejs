<%- include('partials/header') %>
<%- include('partials/navbar') %>

<div class="container">
  <h1 class="mt-5">Minhas Perguntas</h1>
  <div class="container-fluid">
    <% perguntas.forEach(pergunta => { %>
    <br>
    <div class="card">
      <div class="card-body">
        <h3><%= pergunta.titulo %></h3>
        <p><%= pergunta.descricao %></p>
        <p class="text-muted">Pergunta feita por vocÃª - <%= pergunta.tempo %></p>
      </div>
      <div class="card-footer">
        <a href="/pergunta/editar/<%= pergunta.id %>" class="btn btn-warning" role="button">Editar</a>
        <form action="/pergunta/deletar/<%= pergunta.id %>" method="POST" style="display:inline;">
          <button type="submit" class="btn btn-danger">Deletar</button>
        </form>
      </div>
    </div>
    <% }) %>
  </div>
</div>

<%- include('partials/footer') %>
